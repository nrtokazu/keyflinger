<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:keyflinger="http://codepunks.org/schemas/android/res/keyflinger"
    android:keyWidth="33.3%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="@dimen/key_height"
    >

    <Row>
        <Key android:codes="49" android:keyLabel="Shift" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="Ctl"/>
        <Key android:codes="54" android:keyLabel="Alt" android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:codes="-3" android:keyIcon="@drawable/sym_keyboard_done" 
             keyflinger:keyUpCode="-2" keyflinger:keyUpLabel="mode"
             keyflinger:keyUpYOff="-3"
             android:keyEdgeFlags="left"/>
        <Key android:codes="10" android:keyIcon="@drawable/sym_keyboard_return"/>
        <!-- <Key android:codes="32" android:keyIcon="@drawable/sym_keyboard_space"  -->
        <!--      android:isRepeatable="true"/> -->
        <Key android:codes="-5" android:keyIcon="@drawable/sym_keyboard_delete" 
             android:keyEdgeFlags="right" android:isRepeatable="true"/>
    </Row>

</Keyboard>
    
